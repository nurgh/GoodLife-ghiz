<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dokterbackground"
    tools:context=".UserActivity.SignUp">


    <View
        android:layout_width="match_parent"
        android:background="@drawable/bg_overlay"
        android:layout_height="match_parent"/>




    <TextView android:id="@+id/welcome"
    android:layout_width="wrap_content"
    android:textColor="@color/white"
    android:layout_marginTop="25dp"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:text="Welcome!"
    android:textSize="50dp"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/teksenjoy"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:text="Hope you enjoy the stay"
        android:textSize="25dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/textsignup"
        android:layout_width="wrap_content"
        android:layout_below="@id/teksenjoy"
        android:text="Sign Up"
        android:textColor="#fff"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/add_usernamesignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@android:color/transparent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:hint="Username"
        android:textAllCaps="true"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textsignup"
        android:textColor="#fff"
        android:textColorHint="#FFF" />

    <EditText
        android:id="@+id/add_emailsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:backgroundTint="@android:color/transparent"
        android:hint="E-mail"
        android:textAllCaps="true"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/add_usernamesignup"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/add_passwordsignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@android:color/transparent"
        android:hint="Password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:textAllCaps="true"
        android:inputType="textPassword"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/add_emailsignup"
        android:textColor="#FFF"
        android:textColorHint="#FFF" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_signup"
        android:layout_width="90dp"
        android:backgroundTint="#000"
        android:src="@drawable/ic_chevron"
        android:layout_below="@id/add_passwordsignin"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="180dp"
        android:layout_height="90dp"/>


    <TextView
        android:id="@+id/textsignIn"
        android:layout_width="wrap_content"
        android:layout_below="@id/btn_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Sign up for an account?"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>


</RelativeLayout>