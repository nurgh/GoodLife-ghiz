<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPasswordActivity">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/forgottoolbar"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Forgot Password"
                android:layout_height="wrap_content">

        </androidx.appcompat.widget.Toolbar>



        <TextView
                android:id="@+id/txt_welcom"
                android:layout_width="267dp"
                app:layout_constraintTop_toBottomOf="@+id/forgottoolbar"
                android:layout_marginTop="20dp"
                android:text="Konfirmasi Password Anda akan terima dengan memasukan email anda "
                android:textColor="#000"
                android:textSize="13dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_emailforgot"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:hint="e-mail"
        android:textColorHint="@color/colortext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_welcom" />

    <Button
            android:id="@+id/btn_forgot_password"
            android:layout_width="350dp"
            android:gravity="center"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_emailforgot"
            android:textColor="#000"
            android:text="masuk"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            android:background="@drawable/bg_button2"
            android:layout_height="wrap_content" />



</androidx.constraintlayout.widget.ConstraintLayout>